<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment_Create_animal" >

    <LinearLayout
        android:background="#BAFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text="Create new animal"
            android:layout_weight="0"
            android:gravity="center"

            android:textSize="40dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="left"
            android:layout_marginLeft="7dp"
            android:text="Here you can create a new animal.
                          You must fill in the details and then click the create button."
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:paddingLeft="5dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0."
                android:ems="10"
                android:textColorHint="@color/black"
                android:hint="Enter name"
                />

            <EditText
                android:paddingLeft="5dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:id="@+id/editTextTextPersonData"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Enter Data"
                />

            <Button
                android:backgroundTint="#E89637"
                android:id="@+id/button2"
                android:layout_width="300sp"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:text="upload image"
                app:cornerRadius="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/createImageView"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_weight="0.5"
                    tools:src="@tools:sample/avatars" />

            </LinearLayout>

            <Button
                android:backgroundTint="#E89637"
                android:id="@+id/createButton"
                android:layout_width="350sp"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="create"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>




